@{
    ViewData["Title"] = "Payment Details";
}

<div class="card mt-5">
    <!-- Progress Bar -->
    <div class="progress" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="height: 30px">
        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 100%"></div>
    </div>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs nav-justified">
        <li class="nav-item">
            <a class="nav-link disabled" aria-disabled="true">Add Sponsor</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" aria-disabled="true">Add Member</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" aria-disabled="true">Choose Benefit</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#"><i class="bi bi-1-square"></i><span class="ms-1 text-primary">Payment</span></a>
        </li>
    </ul>

<form id="paymentForm" onsubmit="return submitForm(event)">
    <!-- Add your form fields here -->
    <div class="form-group">
        <label for="cardNumber">Card Number</label>
        <input type="text" class="form-control" id="cardNumber" name="cardNumber" required>
    </div>
    <div class="form-group">
        <label for="expiryDate">Expiry Date</label>
        <input type="text" class="form-control" id="expiryDate" name="expiryDate" required>
    </div>
    <div class="form-group">
        <label for="cvv">CVV</label>
        <input type="text" class="form-control" id="cvv" name="cvv" required>
    </div>
    <!-- Add any other fields required for the payment details -->
    <!-- Back and Finish buttons -->
    <div class="mt-3">
        <a href="@Url.Action("Index", "Product")" class="btn back-button">Back</a>
        <button type="submit" class="btn next-button">Finish</button>
    </div>

    <!-- Div to display success message -->
    <div id="Success" class="mt-3"></div>
</form>

<script>
    function submitForm(event) {
        event.preventDefault(); 

        // Display success message
        var messageDiv = document.getElementById('Success');
        messageDiv.innerHTML = '<div class="alert alert-success" role="alert">Congrats, your form has been submitted!</div>';

        return false; 
    }
</script>
