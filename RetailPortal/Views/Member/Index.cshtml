@{
    ViewData["Title"] = "Member Details";
    var membersModel = (Members)Model;
}
<style>
    .container {
        max-width: 130%; /* Makes the container full-width */
    }

    .table {
        width: 95%;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            padding: 8px;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-size: 16px;
            padding: 10px;
            border: 1px solid #ddd;
        }

    /* Adjusting specific widths for each column */
    .choose-member {
        width: 10%;
    }

    .relationship {
        width: 12%;
    }

    .member-name {
        width: 15%;
    }

    .date-of-birth {
        width: 12%;
    }

    .phone-number {
        width: 12%;
    }

    .gender {
        width: 12%;
    }

    .marital-status {
        width: 10%;
    }

    .salary {
        width: 12%;
    }

    .height {
        width: 8%;
    }

    .weight {
        width: 8%;
    }

    /* Header adjustments */
    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 18px;
        font-weight: bold;
    }

    .next-button, .clear-button {
        margin-right: 10px;
    }
</style>

<div class="container">
    <!-- Welcome Message -->
    <div class="row">
        <div class="col-md-12">
            <p class="welcome-message">Welcome, @ViewBag.SponsorName</p>
        </div>
    </div>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="/SponsorDetails">Sponsor & Policy Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/MemberDetails">Member Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/ProductDetails">Product Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Payment">Payment</a>
        </li>
    </ul>

    <br />
    <form id="memberForm" method="post" action="@Url.Action("InsertMembers", "Member")">
        <input type="hidden" name="BrokerId" value="@Model.BrokerId" />

        <!-- Member Details Section -->
        <div class="row mt-4">
            <div class="col-md-6">
                @(Html.Partial("_MemberEdit", membersModel))
            </div>
            <div class="col-md-6">
                @(Html.Partial("_MemberDetails", membersModel))
            </div>
        </div>

        <!-- Agent Details Section - Below Member Details -->
        <div class="row mt-4">
            <div class="col-md-12">
                @(Html.Partial("_Agent", membersModel))
            </div>
        </div>

        <!-- Submit and Next Buttons -->
        <div class="row mt-4">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-primary next-button">Save</button>
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Next</a>
            </div>
        </div>
    </form>
</div>

<script>
    function clearForm() {
        document.getElementById('memberForm').reset();
        document.getElementById('memberchoose').value = 'select';
        document.getElementById('memberrelation').value = 'none';
    }
</script>
