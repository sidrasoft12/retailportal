    ViewData["Title"] = "Member Details";
}
<style>
    .div1 {
        width: 200px;
        height: 30px;
        border: 1px solid blue;
    }

    .div2 {
        width: 200px;
        height: 30px;
        border: 1px solid blue;
    }

    .div3 {
        width: 200px;
        height: 30px;
        border: 1px solid blue
    }
    .div4{
        width: 200px;
        height: 30px;
        border: 1px solid blue
    }
    .div5{
        width: 70px;
        height: 30px;
        border: 1px solid blue
    }
    .div6{
        width: 70px;
        height: 30px;
        border: 1px solid blue
    }
    .div7{
        background-color: #05518e;
        color: white;
        width: 200px;
        height: 50px;
    }

