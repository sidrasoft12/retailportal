@{
    ViewData["Title"] = "Sponsor Details";
}
<style>
    .div1 {
        width: 200px;
        height: 30px;
        border: 1px solid blue;
    }

    .div2 {
        width: 200px;
        height: 30px;
        border: 1px solid blue;
    }
    .div3{
        width: 200px;
        height: 30px;
        border: 1px solid blue;
    }
    .div4{
        width: 200px;
        height: 30px;
        border: 1px solid blue;
    }

    .welcome-message {
        float: right;
        margin-top: 10px;
        color: #555;
    }
</style>
<br />
<div class="col-md-6 text-right">
    <p class="welcome-message">Welcome, @ViewBag.SponsorName</p>
</div>
<ul class="nav nav-tabs">
    
    <li class="nav-item">
        <a class="nav-link active" href="/SponsorDetails">Sponsor Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/PolicyDetails">Policy Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/MemberDetails">Member Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/ProductDetails">Product Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Payment">Payment</a>
    </li>
</ul>
<br />

<form id="sponsorForm">
    <!-- Add your form fields here -->
    <div class="form-group">
        <label for="sponsorName">Sponsor Name</label>
        <input type="text" class="form-control div1" id="sponsorName" name="sponsorName" required>
    </div>
    <div class="form-group">
        <label for="sponsorEmail">Sponsor Email</label>
        <input type="email" class="form-control div2" id="sponsorEmail" name="sponsorEmail" required>
    </div>
    <!-- Add any other fields required for the sponsor details -->
    <div class="form-group">
        <label for="sponsorphone">Phone Number</label>
        <input type="text" class="form-control div3" id="sponsorphone" name="sponsorphone" required>
    </div>
    <div class="form-group">
        <label for="sponsorDOB">Date of Birth</label>
        <input type="date" class="form-control div4" id="sponsorDOB" name="sponsorDOB" required>
    </div>
    <div class="form-group">
        <label>Gender</label>
        <div>
            <input type="radio" id="male" name="sponsorgender" value="male" required>
            <label for="male">Male</label>
            <input type="radio" id="female" name="sponsorgender" value="female" required>
            <label for="female">Female</label>
        </div>
        
    </div>
    <!-- Next button -->
    <div class="mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn back-button">Back</a>
        <a href="@Url.Action("Index", "Policy")" class="btn next-button">Next</a>
    </div>
</form>
