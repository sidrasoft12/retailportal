@model List<RetailPortal.Models.PlanCategoryBenefits>

<style>
    .product-card {
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .product-card h5 {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

    .product-details {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .product-item {
        flex: 1 1 45%;
        margin-bottom: 10px;
    }

        .product-item span {
            display: block;
            font-weight: bold;
        }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .product-card .card-title {
        font-size: 16px;
        color: #495057;
        margin-bottom: 10px;
    }
</style>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Product Details</h4>
    </div>
    <div class="card-body card-container">
        @if (Model != null)
        {
            for (int i = 0; i < Model.Count && i < 5; i++)
            {
                <div class="product-card" data-id="@Model[i].GMQuotationId">
                    <h5 class="card-title">@Model[i]?.BenefitName</h5>
                    <div class="product-details">
                        <div class="product-item">
                            <span>Plan Id:</span> @Model[i]?.PlanId
                        </div>
                        <div class="product-item">
                            <span>Category:</span> @Model[i]?.Category
                        </div>
                        <div class="product-item">
                            <span>Plan Benefit Id:</span> @Model[i]?.PlanBenefitId
                        </div>
                        <div class="product-item">
                            <span>Deductible:</span> @Model[i]?.DisplayDEDText
                        </div>
                        <div class="product-item">
                            <span>CoPay:</span> @Model[i]?.DisplayCopayText
                        </div>
                        
                    </div>
                </div>
            }
        }
        else
        {
            <div>No product details found.</div>
        }
    </div>
</div>
