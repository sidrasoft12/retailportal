@{
    ViewData["Title"] = "Product Details";
}
<style>
    .div1 {
        width: 200px;
        height: 30px;
        border: 1px solid blue;
    }

    .div2 {
        width: 300px;
        height: 100px;
        padding: 50px;
        border: 1px solid blue;
    }

    .welcome-message {
        float: right;
        margin-top: 10px;
        color: #555;
    }
</style>

<br />
<div class="col-md-6 text-right">
    <p class="welcome-message">Welcome, @ViewBag.ProductName</p>
</div>
<ul class="nav nav-tabs">
    
    <li class="nav-item">
        <a class="nav-link" href="/SponsorDetails">Sponsor Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/PolicyDetails">Policy Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/MemberDetails">Member Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/ProductDetails">Product Details</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Payment">Payment</a>
    </li>
</ul>
<br />

<form id="productForm">
    <!-- Add your form fields here -->
    <div class="form-group">
        <label for="productName">Product Name</label>
        <input type="text" class="form-control div1" id="productName" name="productName" required>
        
    </div>
    <div class="form-group">
        <label for="productDescription">Product Description</label>
        <textarea class="form-control div2" id="productDescription" name="productDescription" required></textarea>
 
    </div>
    <!-- Add any other fields required for the product details -->
    <!-- Back and Next buttons -->
    <div class="mt-3">
        <a href="@Url.Action("Index", "Member")" class="btn back-button">Back</a>
        <a href="@Url.Action("Index", "Payment")" class="btn next-button">Next</a>
    </div>
</form>
