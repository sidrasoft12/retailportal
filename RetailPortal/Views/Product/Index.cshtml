@model List<RetailPortal.Models.Mstr_PlanCategoryBenefits>

@{
    ViewData["Title"] = "Product Details";
    var prodModel = (List<Mstr_PlanCategoryBenefits>)Model;
}


<style>
    .container {
        max-width: 130%;
    }

    .table {
        width: 95%;
        border-collapse: collapse;
    }

        .table th, .table td {
            text-align: center;
            padding: 8px;
            border: 1px solid #ddd;
        }

        .table th {
            background-color: #007bff;
            color: white;
            font-size: 16px;
            padding: 10px;
            border: 1px solid #ddd;
        }

    .choose-member {
        width: 10%;
    }

    .relationship {
        width: 12%;
    }

    .member-name {
        width: 15%;
    }

    .date-of-birth {
        width: 12%;
    }

    .phone-number {
        width: 12%;
    }

    .gender {
        width: 12%;
    }

    .marital-status {
        width: 10%;
    }

    .salary {
        width: 12%;
    }

    .height {
        width: 8%;
    }

    .weight {
        width: 8%;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 18px;
        font-weight: bold;
    }

    .next-button, .clear-button {
        margin-right: 10px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p class="welcome-message">Welcome, @ViewBag.SponsorName</p>
        </div>
    </div>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" href="/SponsorDetails">Sponsor & Policy Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/MemberDetails">Member Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/ProductDetails">Product Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Payment">Payment</a>
        </li>
    </ul>

    <br />

    <form id="memberForm" method="post" action="@Url.Action("InsertProducts", "Product")">


        <!-- Member Details Section -->
        <div class="row mt-4">
            <div class="col-md-6">
                <!-- Loop through the list of productsModel -->
                @foreach (var product in Model)
                {
                    @Html.Partial("_ProductDetails", product) <!-- Passing individual product to the partial -->
                }
            </div>
        </div>

        <div class="mt-3">
            <a href="@Url.Action("Index", "Member")" class="btn back-button">Back</a>
            <a href="@Url.Action("Index", "Payment")" class="btn next-button">Next</a>
        </div>
    </form>
</div>


<div class="card mt-5">
    <div class="progress " role="progressbar" aria-label="Animated striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="height: 30px">
        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 75%"></div>
    </div>
    <ul class="nav nav-tabs nav-justified">
        <li class="nav-item">
            <a class="nav-link " aria-current="page" href="#"><i class="bi bi-1-square"></i><span class="ms-1 text-primary">Add Sponsor</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link " aria-disabled="true">Add Members</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-disabled="true">Choose Benefit</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled" aria-disabled="true">Payment</a>
        </li>
    </ul>

    <form id="productForm">
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                @(await Html.PartialAsync("_ProductDetails", prodModel))
            </div>
        </div>
        <!-- Back and Next buttons -->
        <div class="mt-3">
            <a href="@Url.Action("Index", "Member")" class="btn back-button">Back</a>
            <a href="@Url.Action("Index", "Payment")" class="btn next-button">Next</a>
        </div>
    </form>

</div>

