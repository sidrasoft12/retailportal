@{
    ViewData["Title"] = "Sponsor and Policy Details";
    var gmQuotationsModel = (GMQuotations)Model;
}
<style>
    .welcome-message {
        text-align: right;
        margin-top: 10px;
        color: #555;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        font-size: 18px;
        font-weight: bold;
    }

    .card-body {
        background-color: #f9f9f9;
    }

    .form-control {
        margin-bottom: 15px;
    }

    .next-button {
        margin-right: 10px;
    }
</style>

<div class="container">
    <!-- Welcome Message -->
    <div class="row">
        <div class="col-md-12">
            <p class="welcome-message">Welcome, @ViewBag.SponsorName</p>
        </div>
    </div>

    <!-- Navigation Tabs -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="/SponsorDetails">Sponsor & Policy Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/MemberDetails">Member Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/ProductDetails">Product Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Payment">Payment</a>
        </li>
    </ul>

    <!-- Form -->
    <form id="sponsorForm" method="post" action="@Url.Action("InsertQuotations", "GMQuotation")">
        <input type="hidden" name="BrokerId" value="@Model.BrokerId" />

        <div class="row mt-4">
            <!-- Sponsor Edit -->
            <div class="col-md-6">
                @(Html.Partial("_SponsorEdit", gmQuotationsModel))
            </div>

            <!-- Sponsor Details -->
            <div class="col-md-6">
                @(Html.Partial("_SponsorDetails", gmQuotationsModel))
            </div>

            <!-- Policy Edit -->
            <div class="col-md-6">
                @(Html.Partial("_PolicyEdit", gmQuotationsModel))
            </div>

            <!--Policy Details -->
            <div class="col-md-6">
                @(Html.Partial("_PolicyDetails", gmQuotationsModel))
            </div>

            <!-- Agent -->
            <div class="col-md-6">
                @(Html.Partial("_Agent", gmQuotationsModel))
            </div>
        </div>
        <!-- Submit and Next Buttons -->
        <div class="row mt-4">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-primary next-button">Save</button>
                <a href="@Url.Action("Index", "Member")" class="btn btn-secondary">Next</a>
            </div>
        </div>
    </form>
</div>
