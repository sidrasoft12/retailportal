@model List<GMQuotations>
@{
    ViewData["Title"] = "GM Quotations";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        tbody tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <table>
        <thead>
            <tr>
                <th>Row Number</th>
                <th>Quotation ID</th>
                <th>Date</th>
                <th>Quotation Number</th>
                <th>Plan Type</th> 
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model.Take(5)) 
                {
                    <tr>
                        <td>@item.RowNumber</td>
                        <td>@item.GMQuotationId</td>
                        <td>@item.Date.ToString("yyyy-MM-dd")</td> 
                        <td>@item.QuotationNumber</td>
                        <td>@item.PlanType</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No quotations found.</td> 
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
